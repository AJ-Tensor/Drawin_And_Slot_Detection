<Window x:Class="TestProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <Grid>
        <Button Content="Create Drawing" HorizontalAlignment="Left" Margin="14,54,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <ComboBox x:Name="DimensionLocation" HorizontalAlignment="Left" Margin="14,27,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0">
            <ComboBoxItem Content="Left Top" Tag="LeftTop"/>
            <ComboBoxItem Content="Right Top" Tag="LeftTop"/>
            <ComboBoxItem Content="Left Bottom" Tag="LeftTop"/>
            <ComboBoxItem Content="Right Bottom" Tag="LeftTop"/>
        </ComboBox>
        <Button Content="Detect Slot" HorizontalAlignment="Left" Margin="14,0,0,0" VerticalAlignment="Center" Click="Button_Click_1"/>

    </Grid>
</Window>
